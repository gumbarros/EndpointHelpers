@model IReadOnlyList<EndpointHelpers.Sample.Models.Product>
@{
    ViewData["Title"] = "Products (Grid)";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Products</h1>
    <a class="btn btn-link" href="@Url.Products.Index()">Back to list</a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-start justify-content-between">
                        <h5 class="card-title">@product.Name</h5>
                        @if (product.Featured)
                        {
                            <span class="badge text-bg-primary">Featured</span>
                        }
                    </div>
                    <p class="card-subtitle mb-2 text-muted">@product.Category · @product.Rating.ToString("0.0")★</p>
                    <p class="card-text flex-grow-1">@product.Summary</p>
                    <div class="d-flex align-items-center justify-content-between pt-2 border-top">
                        <div class="fw-semibold">$@product.Price</div>
                        <a class="btn btn-sm btn-outline-primary" href="@Url.Products.Details(product.Id)">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
